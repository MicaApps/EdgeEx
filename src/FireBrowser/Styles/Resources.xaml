<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="FluentIcons">/Assets/Icons/Segoe Fluent Icons.ttf#Segoe Fluent Icons</FontFamily>
    <Style TargetType="FontIcon">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="{StaticResource FluentIcons}"/>
    </Style>

    <Style x:Key="NoPaddingFlyoutStyle" TargetType="FlyoutPresenter" BasedOn="{StaticResource DefaultFlyoutPresenterStyle}">
        <Setter Property="Padding" Value="0"/>
    </Style>
</ResourceDictionary>